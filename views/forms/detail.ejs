<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>Form Submission Details</h3>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label"><strong>Name:</strong></label>
            <p><%= form.name %></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Email:</strong></label>
            <p><a href="mailto:<%= form.email %>"><%= form.email %></a></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Phone:</strong></label>
            <p><%= form.phone || 'N/A' %></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Subject:</strong></label>
            <p><%= form.subject %></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Message:</strong></label>
            <p><%= form.message %></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Status:</strong></label>
            <select id="statusSelect" class="form-select">
              <option value="new" <%= form.status === 'new' ? 'selected' : '' %>>New</option>
              <option value="read" <%= form.status === 'read' ? 'selected' : '' %>>Read</option>
              <option value="replied" <%= form.status === 'replied' ? 'selected' : '' %>>Replied</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Submitted:</strong></label>
            <p><%= form.createdAt.toLocaleString() %></p>
          </div>

          <button class="btn btn-primary" onclick="updateStatus()">Update Status</button>
          <a href="/forms/all" class="btn btn-secondary">Back</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function updateStatus() {
    const status = document.getElementById('statusSelect').value;
    fetch('/forms/<%= form._id %>/status', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ status })
    })
    .then(() => alert('Status updated'))
    .catch(() => alert('Error updating status'));
  }
</script>
