<% layout('layouts/boilerplate') %>

<div class="container my-4">
  <div class="wishlist-header">
    <h2>Your Wishlists</h2>
    <p class="text-muted">Create, view, and organize your saved places</p>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWishlistModal">
      <i class="fas fa-plus me-2"></i>Create new wishlist
    </button>
  </div>

  <div class="row mt-4">
    <!-- Default Favorites Wishlist -->
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="wishlist-card">
        <div class="wishlist-cover">
          <img src="/images/default.jpg" alt="Favorites" class="wishlist-image">
          <div class="wishlist-overlay">
            <h5 class="wishlist-title">Favorites</h5>
            <p class="wishlist-count">12 saved places</p>
          </div>
        </div>
        <div class="wishlist-actions">
          <a href="/users/favorites" class="btn btn-outline-primary btn-sm">View all</a>
          <button class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-share"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Sample Wishlists -->
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="wishlist-card">
        <div class="wishlist-cover">
          <img src="/images/default.jpg" alt="Beach Getaways" class="wishlist-image">
          <div class="wishlist-overlay">
            <h5 class="wishlist-title">Beach Getaways</h5>
            <p class="wishlist-count">8 saved places</p>
          </div>
        </div>
        <div class="wishlist-actions">
          <button class="btn btn-outline-primary btn-sm">View all</button>
          <div class="dropdown">
            <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="dropdown">
              <i class="fas fa-ellipsis-h"></i>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
              <li><a class="dropdown-item" href="#"><i class="fas fa-share me-2"></i>Share</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
      <div class="wishlist-card">
        <div class="wishlist-cover">
          <img src="/images/default.jpg" alt="Mountain Retreats" class="wishlist-image">
          <div class="wishlist-overlay">
            <h5 class="wishlist-title">Mountain Retreats</h5>
            <p class="wishlist-count">5 saved places</p>
          </div>
        </div>
        <div class="wishlist-actions">
          <button class="btn btn-outline-primary btn-sm">View all</button>
          <div class="dropdown">
            <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="dropdown">
              <i class="fas fa-ellipsis-h"></i>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
              <li><a class="dropdown-item" href="#"><i class="fas fa-share me-2"></i>Share</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Create New Wishlist Card -->
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="wishlist-card create-new" data-bs-toggle="modal" data-bs-target="#createWishlistModal">
        <div class="create-wishlist-content">
          <i class="fas fa-plus create-icon"></i>
          <h6>Create new wishlist</h6>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Wishlist Modal -->
<div class="modal fade" id="createWishlistModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create wishlist</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="createWishlistForm">
          <div class="mb-3">
            <label for="wishlistName" class="form-label">Name</label>
            <input type="text" class="form-control" id="wishlistName" placeholder="My wishlist" required>
          </div>
          <div class="mb-3">
            <label for="wishlistDescription" class="form-label">Description (optional)</label>
            <textarea class="form-control" id="wishlistDescription" rows="3" placeholder="What makes this wishlist special?"></textarea>
          </div>
          <div class="mb-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="wishlistPrivate">
              <label class="form-check-label" for="wishlistPrivate">
                Make this wishlist private
              </label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="createWishlistBtn">Create</button>
      </div>
    </div>
  </div>
</div>

<style>
.wishlist-header {
  text-align: center;
  margin-bottom: 2rem;
}

.wishlist-header h2 {
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.wishlist-card {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  transition: transform 0.2s ease;
  cursor: pointer;
}

.wishlist-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 20px rgba(0,0,0,0.12);
}

.wishlist-cover {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.wishlist-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.wishlist-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  color: white;
  padding: 1.5rem 1rem 1rem;
}

.wishlist-title {
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.wishlist-count {
  margin: 0;
  opacity: 0.9;
  font-size: 0.9rem;
}

.wishlist-actions {
  padding: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.create-new {
  border: 2px dashed #ddd;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 280px;
}

.create-new:hover {
  border-color: #ff385c;
  background: #fff5f5;
}

.create-wishlist-content {
  text-align: center;
  color: #666;
}

.create-icon {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #ff385c;
}

.create-wishlist-content h6 {
  margin: 0;
  font-weight: 600;
}

@media (max-width: 768px) {
  .wishlist-actions {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .wishlist-actions .btn {
    width: 100%;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const createWishlistBtn = document.getElementById('createWishlistBtn');
  const createWishlistForm = document.getElementById('createWishlistForm');
  
  createWishlistBtn.addEventListener('click', function() {
    const name = document.getElementById('wishlistName').value;
    const description = document.getElementById('wishlistDescription').value;
    const isPrivate = document.getElementById('wishlistPrivate').checked;
    
    if (!name.trim()) {
      alert('Please enter a wishlist name');
      return;
    }
    
    // In a real app, this would make an API call
    console.log('Creating wishlist:', { name, description, isPrivate });
    
    // Close modal and show success message
    const modal = bootstrap.Modal.getInstance(document.getElementById('createWishlistModal'));
    modal.hide();
    
    // Reset form
    createWishlistForm.reset();
    
    // Show success message
    alert('Wishlist created successfully!');
  });
  
  // Handle wishlist card clicks (except for create new)
  document.querySelectorAll('.wishlist-card:not(.create-new)').forEach(card => {
    card.addEventListener('click', function(e) {
      // Don't trigger if clicking on action buttons
      if (e.target.closest('.wishlist-actions')) return;
      
      // Navigate to wishlist details
      console.log('Opening wishlist');
    });
  });
});
</script>