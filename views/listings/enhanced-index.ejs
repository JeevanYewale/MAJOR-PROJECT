<% showNavbar = true %>
<% layout('layouts/boilerplate') %>

<!-- Hero Section -->
<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Find your next adventure</h1>
    <p class="hero-subtitle">Discover amazing places to stay around the world</p>
    
    <!-- Enhanced Search Bar -->
    <div class="hero-search">
      <form action="/search" method="GET" class="search-form">
        <div class="search-inputs">
          <div class="search-input-group">
            <label>Where</label>
            <input type="text" name="location" placeholder="Search destinations" class="search-input">
          </div>
          <div class="search-input-group">
            <label>Check in</label>
            <input type="date" name="checkIn" class="search-input" min="<%= new Date().toISOString().split('T')[0] %>">
          </div>
          <div class="search-input-group">
            <label>Check out</label>
            <input type="date" name="checkOut" class="search-input" min="<%= new Date().toISOString().split('T')[0] %>">
          </div>
          <div class="search-input-group">
            <label>Guests</label>
            <select name="guests" class="search-input">
              <option value="">Add guests</option>
              <% for(let i = 1; i <= 10; i++) { %>
                <option value="<%= i %>"><%= i %> guest<%= i > 1 ? 's' : '' %></option>
              <% } %>
            </select>
          </div>
          <button type="submit" class="search-btn">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Categories Section -->
<div class="container my-5">
  <div class="categories-section">
    <div class="categories-scroll">
      <a href="/search?category=beachfront" class="category-item">
        <i class="fas fa-umbrella-beach"></i>
        <span>Beachfront</span>
      </a>
      <a href="/search?category=cabins" class="category-item">
        <i class="fas fa-home"></i>
        <span>Cabins</span>
      </a>
      <a href="/search?category=trending" class="category-item">
        <i class="fas fa-fire"></i>
        <span>Trending</span>
      </a>
      <a href="/search?category=city" class="category-item">
        <i class="fas fa-city"></i>
        <span>City</span>
      </a>
      <a href="/search?category=mountains" class="category-item">
        <i class="fas fa-mountain"></i>
        <span>Mountains</span>
      </a>
      <a href="/search?category=pools" class="category-item">
        <i class="fas fa-swimming-pool"></i>
        <span>Amazing pools</span>
      </a>
      <a href="/search?category=countryside" class="category-item">
        <i class="fas fa-tree"></i>
        <span>Countryside</span>
      </a>
      <a href="/search?category=luxury" class="category-item">
        <i class="fas fa-crown"></i>
        <span>Luxury</span>
      </a>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="container">
  <div class="listings-header">
    <h2>Explore stays</h2>
    <div class="view-toggle">
      <button class="view-btn active" data-view="grid">
        <i class="fas fa-th-large"></i>
      </button>
      <button class="view-btn" data-view="list">
        <i class="fas fa-list"></i>
      </button>
    </div>
  </div>
  
  <div class="listings-grid" id="listingsContainer">
    <% allListings.forEach(listing => { %>
      <div class="listing-card">
        <div class="listing-image-container">
          <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1625505826533-5e598cdd06d3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60' %>" 
               alt="<%= listing.title %>" 
               class="listing-image"
               loading="lazy"
               onerror="this.src='https://images.unsplash.com/photo-1625505826533-5e598cdd06d3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60'">
          <button class="favorite-btn" data-listing-id="<%= listing._id %>">
            <i class="far fa-heart"></i>
          </button>
          <% if (listing.featured) { %>
            <span class="featured-badge">Featured</span>
          <% } %>
        </div>
        
        <div class="listing-content">
          <div class="listing-header">
            <div class="listing-location">
              <i class="fas fa-map-marker-alt"></i>
              <%= listing.location %>, <%= listing.country %>
            </div>
            <div class="listing-rating">
              <i class="fas fa-star"></i>
              <span><%= listing.averageRating || 'New' %></span>
              <% if (listing.reviewCount > 0) { %>
                <small>(<%= listing.reviewCount %>)</small>
              <% } %>
            </div>
          </div>
          
          <h3 class="listing-title"><%= listing.title %></h3>
          
          <div class="listing-details">
            <% if (listing.maxGuests) { %>
              <span><%= listing.maxGuests %> guests</span>
            <% } %>
            <% if (listing.bedrooms !== undefined) { %>
              <span><%= listing.bedrooms === 0 ? 'Studio' : `${listing.bedrooms} bed` %></span>
            <% } %>
            <% if (listing.bathrooms) { %>
              <span><%= listing.bathrooms %> bath</span>
            <% } %>
          </div>
          
          <div class="listing-price">
            <strong>â‚¹<%= listing.price.toLocaleString('en-IN') %></strong>
            <span class="price-period">night</span>
          </div>
          
          <div class="listing-actions">
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Details</a>
            <% if (currentUser && listing.owner && currentUser._id.toString() === listing.owner._id.toString()) { %>
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-secondary">Edit</a>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  
  <!-- Load More Button -->
  <div class="text-center mt-4">
    <button class="btn btn-outline-primary" id="loadMoreBtn">
      Load more listings
    </button>
  </div>
</div>

<!-- Features Section -->
<div class="features-section">
  <div class="container">
    <h2 class="text-center mb-5">Why choose TravelStay?</h2>
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h4>Secure Booking</h4>
          <p>Your payments and personal information are always protected with our advanced security measures.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-headset"></i>
          </div>
          <h4>24/7 Support</h4>
          <p>Get help whenever you need it with our round-the-clock customer support team.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-medal"></i>
          </div>
          <h4>Quality Guaranteed</h4>
          <p>Every listing is verified and reviewed to ensure you have the best possible experience.</p>
        </div>
      </div>
    </div>
  </div>
</div>

