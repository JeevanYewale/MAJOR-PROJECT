<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Listings</h2>
    <a href="/listings/new" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i>Add New Listing
    </a>
  </div>

  <% if (listings && listings.length > 0) { %>
    <div class="row">
      <% listings.forEach(listing => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card border-0 shadow-sm">
            <div class="position-relative">
              <img src="<%= listing.image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="<%= listing.title %>">
              <span class="badge bg-<%= listing.status === 'active' ? 'success' : 'warning' %> position-absolute top-0 start-0 m-2">
                <%= listing.status || 'Active' %>
              </span>
            </div>
            
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="text-muted small mb-2">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= listing.location %>, <%= listing.country %>
              </p>
              
              <div class="row text-muted small mb-3">
                <div class="col-4">
                  <i class="fas fa-users me-1"></i><%= listing.maxGuests %> guests
                </div>
                <div class="col-4">
                  <i class="fas fa-bed me-1"></i><%= listing.bedrooms %> beds
                </div>
                <div class="col-4">
                  <i class="fas fa-bath me-1"></i><%= listing.bathrooms %> baths
                </div>
              </div>
              
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <strong class="h5 text-primary">$<%= listing.price %></strong>
                  <small class="text-muted">/ night</small>
                </div>
                <div class="text-end">
                  <% if (listing.reviews && listing.reviews.length > 0) { %>
                    <div class="text-warning">
                      <i class="fas fa-star"></i>
                      <%= (listing.reviews.reduce((sum, r) => sum + r.rating, 0) / listing.reviews.length).toFixed(1) %>
                    </div>
                    <small class="text-muted"><%= listing.reviews.length %> reviews</small>
                  <% } else { %>
                    <small class="text-muted">No reviews yet</small>
                  <% } %>
                </div>
              </div>
              
              <!-- Stats -->
              <div class="row text-center mb-3">
                <div class="col-4">
                  <div class="border-end">
                    <strong><%= listing.viewCount || 0 %></strong><br>
                    <small class="text-muted">Views</small>
                  </div>
                </div>
                <div class="col-4">
                  <div class="border-end">
                    <strong><%= listing.favoriteCount || 0 %></strong><br>
                    <small class="text-muted">Favorites</small>
                  </div>
                </div>
                <div class="col-4">
                  <strong><%= listing.bookings?.length || 0 %></strong><br>
                  <small class="text-muted">Bookings</small>
                </div>
              </div>
              
              <!-- Actions -->
              <div class="d-flex gap-2">
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm flex-fill">
                  <i class="fas fa-eye me-1"></i>View
                </a>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-secondary btn-sm flex-fill">
                  <i class="fas fa-edit me-1"></i>Edit
                </a>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteListing('<%= listing._id %>', '<%= listing.title %>')">
                  <i class="fas fa-trash me-1"></i>Delete
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <i class="fas fa-home fa-3x text-muted mb-3"></i>
      <h4>No listings yet</h4>
      <p class="text-muted mb-4">Start earning by creating your first listing!</p>
      <a href="/listings/new" class="btn btn-primary btn-lg">Create Your First Listing</a>
    </div>
  <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Listing</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete "<span id="listingTitle"></span>"?</p>
        <p class="text-danger small">This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" class="d-inline">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">Delete Listing</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
function deleteListing(listingId, title) {
  document.getElementById('listingTitle').textContent = title;
  document.getElementById('deleteForm').action = `/listings/${listingId}`;
  
  const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
  modal.show();
}
</script>