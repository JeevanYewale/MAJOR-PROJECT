<% layout('layouts/boilerplate') %>

<div class="container-fluid login-container">
  <div class="row min-vh-100">
    <!-- Left Side - Branding -->
    <div class="col-lg-6 d-none d-lg-flex login-brand">
      <div class="brand-content">
        <h1 class="brand-title">Welcome to TravelStay</h1>
        <p class="brand-subtitle">Discover amazing places to stay around the world</p>
        <div class="brand-features">
          <div class="feature-item">
            <i class="fas fa-home"></i>
            <span>Unique Properties</span>
          </div>
          <div class="feature-item">
            <i class="fas fa-shield-alt"></i>
            <span>Secure Booking</span>
          </div>
          <div class="feature-item">
            <i class="fas fa-users"></i>
            <span>Trusted Community</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Right Side - Login Form -->
    <div class="col-lg-6 login-form-section">
      <div class="login-form-container">
        <div class="text-center mb-4">
          <h2 class="login-title">Sign In</h2>
          <p class="login-subtitle">Choose your preferred sign-in method</p>
        </div>
        
        <!-- Social Login Options -->
        <div class="social-login-section mb-4">
          <button class="btn-social btn-google" onclick="loginWithGoogle()">
            <i class="fab fa-google"></i>
            <span>Continue with Google</span>
          </button>
          
          <button class="btn-social btn-facebook" onclick="loginWithFacebook()">
            <i class="fab fa-facebook-f"></i>
            <span>Continue with Facebook</span>
          </button>
          
          <button class="btn-social btn-apple" onclick="loginWithApple()">
            <i class="fab fa-apple"></i>
            <span>Continue with Apple</span>
          </button>
          
          <button class="btn-social btn-phone" onclick="showPhoneLogin()">
            <i class="fas fa-mobile-alt"></i>
            <span>Continue with Phone</span>
          </button>
        </div>
        
        <div class="divider">
          <span>or</span>
        </div>
        
        <!-- Email/Password Login -->
        <form action="/users/login" method="POST" class="login-form">
          <div class="form-group">
            <label for="username">Email or Username</label>
            <input type="text" id="username" name="username" class="form-control" required>
          </div>
          
          <div class="form-group">
            <label for="password">Password</label>
            <div class="password-input">
              <input type="password" id="password" name="password" class="form-control" required>
              <button type="button" class="password-toggle" onclick="togglePassword()">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>
          
          <div class="form-options">
            <label class="remember-me">
              <input type="checkbox" name="remember">
              <span>Remember me</span>
            </label>
            <a href="/users/forgot-password" class="forgot-password">Forgot password?</a>
          </div>
          
          <button type="submit" class="btn-login">Sign In</button>
        </form>
        
        <!-- Magic Link Option -->
        <div class="magic-link-section mt-3">
          <button class="btn-magic-link" onclick="showMagicLink()">
            <i class="fas fa-magic"></i>
            <span>Send me a magic link</span>
          </button>
        </div>
        
        <!-- User Type Selection -->
        <div class="user-type-section mt-4">
          <p class="user-type-title">New to TravelStay?</p>
          <div class="user-type-options">
            <a href="/users/signup?type=individual" class="user-type-card">
              <i class="fas fa-user"></i>
              <span>Personal Account</span>
              <small>For travelers and individual hosts</small>
            </a>
            <a href="/users/signup?type=business" class="user-type-card">
              <i class="fas fa-building"></i>
              <span>Business Account</span>
              <small>For hotels and property managers</small>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Phone Login Modal -->
<div class="modal fade" id="phoneLoginModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sign in with Phone</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="phoneLoginForm">
          <div class="form-group">
            <label>Phone Number</label>
            <div class="phone-input">
              <select class="country-code">
                <option value="+91">ðŸ‡®ðŸ‡³ +91</option>
                <option value="+1">ðŸ‡ºðŸ‡¸ +1</option>
                <option value="+44">ðŸ‡¬ðŸ‡§ +44</option>
              </select>
              <input type="tel" class="form-control" placeholder="Enter phone number" required>
            </div>
          </div>
          <button type="submit" class="btn-login w-100">Send OTP</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Magic Link Modal -->
<div class="modal fade" id="magicLinkModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Magic Link Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="magicLinkForm">
          <div class="form-group">
            <label>Email Address</label>
            <input type="email" class="form-control" placeholder="Enter your email" required>
          </div>
          <p class="magic-link-info">We'll send you a secure link to sign in without a password.</p>
          <button type="submit" class="btn-login w-100">Send Magic Link</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
