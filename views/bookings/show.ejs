<% showNavbar = true %>
<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">
            <i class="fas fa-check-circle me-2"></i>
            Booking Details
          </h3>
        </div>
        <div class="card-body">
          <!-- Booking Status -->
          <div class="alert alert-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'pending' ? 'warning' : 'danger' %>" role="alert">
            <h5 class="alert-heading">
              <% if (booking.status === 'confirmed') { %>
                <i class="fas fa-check-circle me-2"></i>Booking Confirmed
              <% } else if (booking.status === 'pending') { %>
                <i class="fas fa-clock me-2"></i>Booking Pending
              <% } else { %>
                <i class="fas fa-times-circle me-2"></i>Booking Cancelled
              <% } %>
            </h5>
            <p class="mb-0">
              <% if (booking.status === 'confirmed') { %>
                Your booking has been confirmed! You'll receive further details via email.
              <% } else if (booking.status === 'pending') { %>
                Your booking request is pending host approval. You'll be notified once confirmed.
              <% } else { %>
                This booking has been cancelled.
              <% } %>
            </p>
          </div>

          <!-- Listing Info -->
          <div class="row mb-4">
            <div class="col-md-4">
              <img src="<%= booking.listing.image?.url || '/images/default.jpg' %>" 
                   alt="<%= booking.listing.title %>" 
                   class="img-fluid rounded">
            </div>
            <div class="col-md-8">
              <h4><%= booking.listing.title %></h4>
              <p class="text-muted">
                <i class="fas fa-map-marker-alt"></i>
                <%= booking.listing.location %>, <%= booking.listing.country %>
              </p>
              <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary btn-sm">
                View Listing
              </a>
            </div>
          </div>

          <!-- Booking Details -->
          <div class="row">
            <div class="col-md-6">
              <h5>Trip Details</h5>
              <ul class="list-unstyled">
                <li><strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %></li>
                <li><strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %></li>
                <li><strong>Guests:</strong> <%= booking.guests %></li>
                <li><strong>Nights:</strong> <%= booking.nights %></li>
              </ul>
            </div>
            <div class="col-md-6">
              <h5>Payment Details</h5>
              <ul class="list-unstyled">
                <li><strong>Total Amount:</strong> â‚¹<%= booking.totalPrice.toLocaleString('en-IN') %></li>
                <li><strong>Booking Date:</strong> <%= new Date(booking.createdAt).toLocaleDateString() %></li>
                <li><strong>Booking ID:</strong> #<%= booking._id.toString().slice(-8).toUpperCase() %></li>
              </ul>
            </div>
          </div>

          <% if (booking.message) { %>
            <div class="mt-3">
              <h5>Your Message</h5>
              <p class="bg-light p-3 rounded"><%= booking.message %></p>
            </div>
          <% } %>

          <!-- Actions -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <a href="/bookings" class="btn btn-outline-secondary">
              <i class="fas fa-list me-2"></i>All Bookings
            </a>
            <% if (booking.status === 'pending') { %>
              <button class="btn btn-danger" onclick="cancelBooking('<%= booking._id %>')">
                <i class="fas fa-times me-2"></i>Cancel Request
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

