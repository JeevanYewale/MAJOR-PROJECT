<% showNavbar = true %>
<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Bookings</h2>
    <a href="/listings" class="btn btn-primary">
      <i class="fas fa-search me-2"></i>Find More Places
    </a>
  </div>

  <% if (bookings.length === 0) { %>
    <div class="text-center py-5">
      <i class="fas fa-calendar-times text-muted" style="font-size: 4rem;"></i>
      <h3 class="mt-3 text-muted">No bookings yet</h3>
      <p class="text-muted">Start exploring amazing places to stay!</p>
      <a href="/listings" class="btn btn-primary btn-lg">
        <i class="fas fa-search me-2"></i>Browse Listings
      </a>
    </div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= booking.listing.image?.url || '/images/default.jpg' %>" 
                 class="card-img-top" alt="<%= booking.listing.title %>" 
                 style="height: 200px; object-fit: cover;">
            
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p class="card-text text-muted">
                <i class="fas fa-map-marker-alt"></i>
                <%= booking.listing.location %>, <%= booking.listing.country %>
              </p>
              
              <div class="booking-details mb-3">
                <small class="text-muted">
                  <i class="fas fa-calendar"></i>
                  <%= new Date(booking.checkIn).toLocaleDateString() %> - 
                  <%= new Date(booking.checkOut).toLocaleDateString() %>
                </small><br>
                <small class="text-muted">
                  <i class="fas fa-users"></i>
                  <%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %>
                </small><br>
                <small class="text-muted">
                  <i class="fas fa-rupee-sign"></i>
                  â‚¹<%= booking.totalPrice.toLocaleString('en-IN') %>
                </small>
              </div>
              
              <div class="mb-3">
                <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'pending' ? 'warning' : 'danger' %>">
                  <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                </span>
              </div>
              
              <div class="mt-auto">
                <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary btn-sm">
                  <i class="fas fa-eye me-1"></i>View Details
                </a>
                <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-secondary btn-sm">
                  <i class="fas fa-home me-1"></i>View Listing
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>