<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <h2>Host Dashboard - Bookings</h2>
  
  <% if (bookings.length === 0) { %>
    <div class="text-center py-5">
      <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
      <h4>No bookings yet</h4>
      <p class="text-muted">Your listings haven't received any bookings yet.</p>
      <a href="/listings/new" class="btn btn-primary">Create New Listing</a>
    </div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h6 class="mb-0"><%= booking.listing.title %></h6>
              <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'warning' %>">
                <%= booking.status %>
              </span>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-4">
                  <img src="<%= booking.listing.image?.url || '/images/default.jpg' %>" 
                       class="img-fluid rounded" alt="<%= booking.listing.title %>">
                </div>
                <div class="col-8">
                  <p class="mb-2">
                    <strong>Guest:</strong> <%= booking.user.firstName || booking.user.username %>
                  </p>
                  <p class="mb-2">
                    <strong>Dates:</strong><br>
                    <%= new Date(booking.checkIn).toLocaleDateString() %> - 
                    <%= new Date(booking.checkOut).toLocaleDateString() %>
                  </p>
                  <p class="mb-2">
                    <strong>Guests:</strong> <%= booking.guests %> | 
                    <strong>Nights:</strong> <%= booking.nights %>
                  </p>
                  <p class="mb-2">
                    <strong>Total:</strong> 
                    <span class="text-success fw-bold">â‚¹<%= booking.totalPrice.toLocaleString('en-IN') %></span>
                  </p>
                  <% if (booking.phone) { %>
                    <p class="mb-2"><strong>Phone:</strong> <%= booking.phone %></p>
                  <% } %>
                  <% if (booking.message) { %>
                    <p class="mb-0"><strong>Message:</strong> <%= booking.message %></p>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  Booked on <%= new Date(booking.createdAt).toLocaleDateString() %>
                </small>
                <% if (booking.status === 'pending') { %>
                  <div class="btn-group btn-group-sm">
                    <form action="/bookings/<%= booking._id %>/approve" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check me-1"></i>Approve
                      </button>
                    </form>
                    <form action="/bookings/<%= booking._id %>/reject" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm" 
                              onclick="return confirm('Are you sure you want to reject this booking?')">
                        <i class="fas fa-times me-1"></i>Reject
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>